                {r2 == resultado;}

        else if ( x == 2)
                {r3 == resultado;}

        else if (x == 3)
                {r4 == resultado;}

        else if (x == 4)
                {r5 == resultado;}

        else if (x == 5)
                {r6 == resultado;}
